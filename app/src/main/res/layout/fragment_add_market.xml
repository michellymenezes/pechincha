<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.projeto1.projeto1.fragments.AddMarketFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:background="@drawable/add_market">
   </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="3dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg_text_input"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/checkbox"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Cadastrar Supermercado"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="5"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name_market"
                android:background="@drawable/rounded_bg"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/market_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:imeOptions="actionDone"
                    android:hint="Nome do Supermercado"
                    android:inputType="textCapWords"
                    />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/market_street"
                    android:layout_width="match_parent"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:imeOptions="actionDone"
                    android:hint="Rua"
                    android:inputType="textCapWords"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/market_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="NÂº"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="14dp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_brand"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_bg"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/market_neighborhood"
                    android:completionThreshold="1"
                    android:layout_width="match_parent"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:imeOptions="actionDone"
                    android:hint="Bairro"
                    android:inputType="textCapWords"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_product"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/market_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:imeOptions="actionDone"
                    android:hint="Cidade"
                    android:inputType="textCapWords"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_price"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/rounded_bg"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/market_state"
                    android:layout_width="match_parent"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:imeOptions="actionDone"
                    android:hint="Estado"
                    android:inputType="textCapWords"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/send_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_send_button"
        android:textColor="@android:color/white"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:elevation="3dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Cadastrar"/>





</LinearLayout>
