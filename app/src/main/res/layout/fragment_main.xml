<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.projeto1.projeto1.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/previeww">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/search_bar_container"
        android:layout_marginTop="-25dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_bg_text_input"
        android:elevation="2dp"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        android:visibility="visible">

        <AutoCompleteTextView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:completionThreshold="2"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="false"
            android:backgroundTint="@android:color/transparent"
            android:drawableRight="@drawable/ic_search"
            android:gravity="center"
            android:hint="O quê você procura?"
            android:imeOptions="actionSearch"
            android:inputType="textCapWords"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="18dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_bg_product_item"
        android:elevation="2dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/grocery_btn"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_grocery_blue"
                    android:textSize="12dp"
                    android:background="@drawable/bg_select_category"
                    android:textColor="@android:color/transparent"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:gravity="top|center"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:text="Alimento"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_hygiene_blue"
                    android:textSize="12dp"
                    android:background="@drawable/bg_select_category"
                    android:textColor="@android:color/transparent"
                    android:textAlignment="center"
                    android:id="@+id/hygiene_btn"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:layout_below="@+id/checkbox"
                    android:gravity="center|top"
                    android:textSize="12dp"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Higiene"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/cleaning_btn"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_wiping"
                    android:textSize="12dp"
                    android:background="@drawable/bg_select_category"
                    android:textColor="@android:color/transparent"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:gravity="center|top"
                    android:textSize="12dp"
                    android:text="Limpeza"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.3"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/electronic_btn"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_plug"
                    android:textSize="12dp"
                    android:background="@drawable/bg_select_category"
                    android:textColor="@android:color/transparent"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:gravity="top|center"
                    android:textSize="12dp"
                    android:layout_gravity="center"
                    android:text="Eletrônico"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/furniture_btn"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:elevation="2dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_sofa"
                    android:textSize="12dp"
                    android:background="@drawable/bg_select_category"
                    android:textColor="@android:color/transparent"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:layout_below="@+id/checkbox"
                    android:gravity="center|top"
                    android:textSize="12dp"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Mobília"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/other_btn"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_other_gray"
                    android:textSize="12dp"
                    android:background="@drawable/bg_select_category"
                    android:textColor="@android:color/transparent"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:gravity="center|top"
                    android:textSize="12dp"
                    android:text="Outros"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/scan_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="40dp"
        android:layout_marginTop="-25dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_sale_"
        app:backgroundTint="@color/colorPrimaryDark"
        />


</LinearLayout>
