<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shawnlin.numberpicker.NumberPicker
            android:layout_margin="15dp"
            android:id="@+id/number_picker_day"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_width="64dp"
            app:np_dividerDistance="45dp"
            app:np_height="180dp"
            app:np_value="0"
            app:np_dividerColor="@color/colorPrimary"
            app:np_selectedTextColor="@android:color/tertiary_text_dark"
            app:np_selectedTextSize="20dp"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="15dp"
            />

        <com.shawnlin.numberpicker.NumberPicker
            android:layout_margin="15dp"
            android:id="@+id/number_picker_month"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_width="64dp"
            app:np_dividerDistance="40dp"
            app:np_height="180dp"
            app:np_value="0"
            app:np_dividerColor="@color/colorPrimary"
            app:np_selectedTextColor="@android:color/tertiary_text_dark"
            app:np_selectedTextSize="20dp"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="15dp"
            />

        <com.shawnlin.numberpicker.NumberPicker
            android:layout_margin="15dp"
            android:id="@+id/number_picker_year"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_width="64dp"
            app:np_dividerDistance="40dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_selectedTextColor="@android:color/tertiary_text_dark"
            app:np_selectedTextSize="20dp"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="15dp"
            />

    </LinearLayout>

</LinearLayout>