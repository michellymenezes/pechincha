            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_bg"
                android:elevation="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Avalie a promoção" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="Curti"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/like_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_checkbox_like"
                            android:button="@null"
                            android:clickable="true"
                            android:src="@drawable/ic_favorite_border" />

                        <TextView
                            android:id="@+id/like_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="Não curti"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/dislike_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_checkbox_dislike"
                            android:button="@null"
                            android:clickable="true"
                            android:src="@drawable/ic_favorite_border" />

                        <TextView
                            android:id="@+id/dislike_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="Salvar"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/fav_btn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_checbox_favorite"
                            android:button="@null"
                            android:clickable="true"
                            android:src="@drawable/ic_favorite_border" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
