<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="coprojeto1m.projeto1..fragments.SaleDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="220dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/img_content"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="160dp"
                android:background="@drawable/circle_bg_image"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_height="160dp">
                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_groceries"
                    android:scaleType="fitCenter"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/img_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-60dp"
                android:gravity="center"
                android:layout_marginLeft="-70dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/user_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerInside"
                    android:background="@drawable/circle_bg_image"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="top|center"
                    android:text="Usuario"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:gravity="top|center"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:text="12/06/2017"
                    />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_height="100dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="4dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/name_product"
                android:layout_width="250dp"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:textColor="@android:color/tertiary_text_dark"
                android:textStyle="bold"
                android:text="Nome produto"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/sm_location"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_map_pin_marked"/>
            <Button
                android:id="@+id/name_supermarket"
                android:layout_toRightOf="@+id/sm_location"
                android:gravity="left|bottom"
                android:background="@android:color/transparent"
                android:layout_width="170dp"
                android:layout_marginLeft="3dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                android:text="Supermercado"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="13dp"/>

            <LinearLayout
                android:id="@+id/like_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/like_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textSize="10dp"
                    android:text="0"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_favorite_border"
                    android:id="@+id/like_btn"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_checbox_favorite"
                    android:button="@null"
                    android:clickable="true"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/like_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/old_price"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:text="R$2.99"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/current_price"
                    android:layout_height="30dp"
                    android:layout_marginTop="-5dp"
                    android:gravity="top"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="R$3.99"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:id="@+id/divider"
                android:layout_height="0.6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray"/>

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/circle_container"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_gravity="center"
                        android:layout_height="60dp"
                        android:elevation="2dp"
                        android:src="@drawable/ic_report"
                        android:textSize="12dp"
                        android:background="@drawable/ic_circle_checked"
                        android:textColor="@android:color/transparent"
                        android:textAlignment="center"
                        android:id="@+id/report"
                        />

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="top|center"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:text="Reportar"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_gravity="center"
                        android:layout_height="60dp"
                        android:elevation="2dp"
                        android:src="@drawable/ic_update_price"
                        android:textSize="12dp"
                        android:background="@drawable/ic_circle_checked"
                        android:textColor="@android:color/transparent"
                        android:textAlignment="center"
                        android:id="@+id/att"
                        />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_below="@+id/checkbox"
                        android:gravity="center|top"
                        android:textSize="12dp"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Atualizar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/evaluate"
                        android:layout_width="60dp"
                        android:layout_gravity="center"
                        android:layout_height="60dp"
                        android:elevation="2dp"
                        android:src="@drawable/ic_customer"
                        android:textSize="12dp"
                        android:background="@drawable/ic_circle_checked"
                        android:textColor="@android:color/transparent"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="60dp"
                        android:gravity="center|top"
                        android:textSize="12dp"
                        android:text="Avaliar"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>



