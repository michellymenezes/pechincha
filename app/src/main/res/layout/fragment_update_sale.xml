<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.projeto1.projeto1.fragments.AddProductFragment">

    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Atualize a promoção"
                android:textColor="@android:color/tertiary_text_dark"/>
            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:src="@drawable/ic_groceries"
                android:layout_height="130dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg_text_input"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/checkbox"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text="Informações do produto"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="5"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_code_product"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="5dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:clickable="false"
                            android:id="@+id/product_code_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_alignParentRight="true"
                            android:imeOptions="actionDone"
                            android:hint="Código do Produto"
                            android:inputType="number"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_product"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_alignParentRight="true"
                            android:imeOptions="actionDone"
                            android:text="Nome do Produto"
                            android:inputType="textCapWords"
                            />
                        <TextView
                            android:id="@+id/product_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_alignParentRight="true"
                            android:imeOptions="actionDone"
                            android:inputType="textCapWords"
                            />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_brand"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="@drawable/rounded_bg_product_item"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/market_input"
                            android:completionThreshold="1"
                            android:layout_width="match_parent"
                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:imeOptions="actionDone"
                            android:hint="Supermercado"
                            android:inputType="textCapWords"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_price"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_bg_product_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/price_input"
                            android:layout_width="match_parent"
                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:imeOptions="actionDone"
                            android:hint="Preço"
                            android:inputType="numberDecimal"
                            />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/quantity_input"
                        android:padding="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="@android:color/transparent"
                        android:gravity="start|center"
                        android:layout_alignParentRight="true"
                        android:imeOptions="actionDone"
                        android:hint="Quantidade"
                        android:inputType="number"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/expire_date"
                        android:padding="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="@android:color/transparent"
                        android:gravity="start|center"
                        android:layout_alignParentRight="true"
                        android:imeOptions="actionDone"
                        android:hint="Data de validade"
                        android:inputType="number"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/product_id_input"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:visibility="invisible"
                        android:inputType="textCapWords"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">


                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/cancel_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_send_button"
                    android:textColor="@android:color/white"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Cancelar"/>


                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/update_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_send_button"
                    android:textColor="@android:color/white"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Atualizar"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
